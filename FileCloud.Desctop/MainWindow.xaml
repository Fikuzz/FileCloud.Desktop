<Window x:Class="FileCloud.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCloud.Desktop"
        xmlns:helpers="clr-namespace:FileCloud.Desktop.Helpers"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:FileCloud.Desktop.ViewModels;assembly=FileCloud.Desktop.ViewModels"
        xmlns:view="clr-namespace:FileCloud.Desktop.View"
        xmlns:conv="clr-namespace:FileCloud.Desktop.View.Converters"
        xmlns:behav="clr-namespace:FileCloud.Desktop.View.Behaviors"
        mc:Ignorable="d"
        Title="FileCloud Desktop" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen" MinHeight="450" MinWidth="700">
    <!--  Улучшено: Задано более информативное название, стартовая позиция, минимальные размеры  -->

    <Window.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:WidthToColumnsConverter x:Key="WidthToColumnsConverter" />
            <conv:ServerStatusToColorConverter x:Key="ServerStatusToColorConverter"/>
            <conv:MinimizeIconConverter x:Key="MinimizeIconConverter"/>
            <conv:MinimizeToolTipConverter x:Key="MinimizeToolTipConverter"/>
            <!-- Colors -->
            <Color x:Key="PrimaryDarkColor">#FF2C3E50</Color>
            <Color x:Key="PrimaryLightColor">#FFF0F0F0</Color>
            <Color x:Key="BorderLightColor">#FFCCCCCC</Color>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
            <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
            <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}" />

            <!-- Default Styles -->
            <Style TargetType="Button">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="10,7" />
                <Setter Property="HorizontalContentAlignment" Value="Right"/>
                <Setter Property="FontSize" Value="15"/> 
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                            CornerRadius="12"
                            Padding="{TemplateBinding Padding}"
                            Margin="{TemplateBinding Margin}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFBEE6FD"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#FFC4E5F6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="4" />
            </Style>

            <!-- Item Template Styles (Reduce Duplication) -->
            <Style x:Key="ItemBorderStyle" TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="4" />
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Background" Value="White" />
            </Style>

            <Style x:Key="ItemImageStyle" TargetType="Image">
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="100" />
                <Setter Property="Stretch" Value="Uniform" />
            </Style>

            <!-- Common Template for File and Folder Name Editing -->
            <Style x:Key="ItemNameEditingStyle" TargetType="Grid">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Margin" Value="4,4,4,8" />
            </Style>

            <Style x:Key="ItemNameTextBlockStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="MaxWidth" Value="120" />
                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
            </Style>

            <Style x:Key="ItemNameTextBoxStyle" TargetType="TextBox">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>

            <!-- Proxy Resource Style for Context Menus -->
            <Style x:Key="ContextMenuProxyStyle" TargetType="FrameworkElement">
                <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border DockPanel.Dock="Top"
                Background="{StaticResource PrimaryDarkBrush}"
                Padding="12">
            <TextBlock Text="👤 Гость"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold" />
        </Border>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="{StaticResource PrimaryLightBrush}">
            <StatusBarItem HorizontalAlignment="Left">
                <TextBlock Name="StatusBarText" Text="{Binding StatusMessage}" />
            </StatusBarItem>
            
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal" Margin="5,0">
                    <Ellipse x:Name="ServerStatusIndicator" 
                     Width="10" 
                     Height="10" 
                     StrokeThickness="0.5"
                     Stroke="DarkSlateGray"
                     Fill="{Binding ServerStatus, Converter={StaticResource ServerStatusToColorConverter}}">
                        <Ellipse.ToolTip>
                            <TextBlock Margin="5,0" Text="{Binding ServerStatusMessage}"/>
                        </Ellipse.ToolTip>
                    </Ellipse>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Actions -->
            <Border Grid.Column="0"
                    Width="70"
                    Background="{StaticResource PrimaryLightBrush}"
                    Padding="0,8,8,8">
                <i:Interaction.Behaviors>
                    <behav:PanelMinimizeBehavior IsMinimized="{Binding IsLeftPanelMinimized}"/>
                </i:Interaction.Behaviors>
                <DockPanel>
                    <Button Content="🔄 Обновить"
                            DockPanel.Dock="Bottom"
                            Command="{Binding LoadFolderChildsCommand}" />
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                        <Button Content="{Binding IsLeftPanelMinimized, Converter={StaticResource MinimizeIconConverter}}" 
                                ToolTip="{Binding IsLeftPanelMinimized, Converter={StaticResource MinimizeToolTipConverter}}"
                                FontSize="24" Padding="0,0,0,4" Width="50"
                                Command="{Binding ToggleLeftPanelCommand}"/>

                        <Button Content="📤 Загрузить"
                                ToolTip="Загрузить файлы на сервер"
                                Command="{Binding UploadFileCommand}" />
                        <Button Content="📥 Скачать"
                                ToolTip="Скачать файлы c сервера"
                                Command="{Binding SaveFilesCommand}" />
                        <Button Content="❌ Удалить"
                                ToolTip="Удалить файлы с сервера"
                                Command="{Binding DeleteItemsCommand}" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Right Panel - File System -->
            <DockPanel Grid.Column="2">
                <!-- Breadcrumb and Search -->
                <Border DockPanel.Dock="Top"
                        Background="{StaticResource PrimaryLightBrush}"
                        Padding="8,6"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{StaticResource BorderLightBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ItemsControl ItemsSource="{Binding FolderPath}"
                                      Background="Transparent">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:FolderViewModel}">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.LoadFolderChildsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource {x:Type Button}}"
                                                AllowDrop="True"
                                                Drop="Breadcrumb_Drop"
                                                DragOver="Breadcrumb_DragOver"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Padding="2"
                                                FontSize="13" />
                                        <TextBlock Text="/"
                                                   Padding="0,4"
                                                   Margin="0"
                                                   FontSize="18"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBox Grid.Column="1"
                                 Width="200"
                                 Height="28"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Введите название файла или папки для поиска" />
                    </Grid>
                </Border>

                <!-- Items List -->
                <ListBox SelectionMode="Extended"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             BorderThickness="0"
                             Background="Transparent"
                             ItemsSource="{Binding Items}"
                             helpers:ListBoxSelectedItemsBinding.BindableSelectedItems="{Binding SelectedItems}"
                             AllowDrop="True"
                             Drop="ListBox_Drop" 
                             DragOver="ListBox_DragOver">
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="New folder"
                                          Command="{Binding CreateFolderCommand}" />
                        </ContextMenu>
                    </ListBox.ContextMenu>

                    <ListBox.InputBindings>
                        <KeyBinding Key="Delete"
                                        Command="{Binding DeleteItemsCommand}" />
                    </ListBox.InputBindings>
                    
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=ListBox}, 
                                Converter={StaticResource WidthToColumnsConverter}, ConverterParameter=130}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.Resources>
                        <!-- File DataTemplate -->
                        <DataTemplate DataType="{x:Type vm:FileViewModel}">
                            <view:FileItemView/>
                        </DataTemplate>

                        <!-- Folder DataTemplate -->
                        <DataTemplate DataType="{x:Type vm:FolderViewModel}">
                            <view:FolderItemView/>
                        </DataTemplate>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Style>
                    </ListBox.Resources>
                </ListBox>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>