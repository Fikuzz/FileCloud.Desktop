<Window x:Class="FileCloud.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCloud.Desktop"
        xmlns:helpers="clr-namespace:FileCloud.Desktop.Helpers"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:FileCloud.Desktop.ViewModels;assembly=FileCloud.Desktop.ViewModels"
        xmlns:view="clr-namespace:FileCloud.Desktop.View"
        xmlns:conv="clr-namespace:FileCloud.Desktop.View.Converters"
        xmlns:behav="clr-namespace:FileCloud.Desktop.View.Behaviors"
        mc:Ignorable="d"
        Title="FileCloud Desktop" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen" MinHeight="450" MinWidth="700">
    <!--  Улучшено: Задано более информативное название, стартовая позиция, минимальные размеры  -->

    <Window.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <!-- Colors -->
            <Color x:Key="PrimaryDarkColor">#FF2C3E50</Color>
            <Color x:Key="PrimaryLightColor">#FFF0F0F0</Color>
            <Color x:Key="BorderLightColor">#FFCCCCCC</Color>
            <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDarkColor}" />
            <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLightColor}" />
            <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource BorderLightColor}" />

            <!-- Default Styles -->
            <Style TargetType="Button">
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="10,4" />
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#FFEAEAEA" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Padding" Value="4" />
            </Style>

            <!-- Item Template Styles (Reduce Duplication) -->
            <Style x:Key="ItemBorderStyle" TargetType="Border">
                <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Margin" Value="4" />
                <Setter Property="Padding" Value="4" />
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Background" Value="White" />
            </Style>

            <Style x:Key="ItemImageStyle" TargetType="Image">
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="100" />
                <Setter Property="Stretch" Value="Uniform" />
            </Style>

            <!-- Common Template for File and Folder Name Editing -->
            <Style x:Key="ItemNameEditingStyle" TargetType="Grid">
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="Margin" Value="4,4,4,8" />
            </Style>

            <Style x:Key="ItemNameTextBlockStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="TextAlignment" Value="Center" />
                <Setter Property="MaxWidth" Value="120" />
                <Setter Property="TextTrimming" Value="CharacterEllipsis" />
            </Style>

            <Style x:Key="ItemNameTextBoxStyle" TargetType="TextBox">
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
            </Style>

            <!-- Proxy Resource Style for Context Menus -->
            <Style x:Key="ContextMenuProxyStyle" TargetType="FrameworkElement">
                <Setter Property="Tag" Value="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Header -->
        <Border DockPanel.Dock="Top"
                Background="{StaticResource PrimaryDarkBrush}"
                Padding="12">
            <TextBlock Text="👤 Гость"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold" />
        </Border>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="{StaticResource PrimaryLightBrush}">
            <StatusBarItem>
                <TextBlock Name="StatusBarText" Text="{Binding StatusMessage}" />
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="55"/>
                <ColumnDefinition Width="5" />
                <!-- Splitter Grip -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Actions -->
            <Border Grid.Column="0"
                    Background="{StaticResource PrimaryLightBrush}"
                    Padding="4">
                <DockPanel>
                    <Button Content="🔄 Обновить"
                            DockPanel.Dock="Bottom"
                            Command="{Binding LoadFolderChildsCommand}" />
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,8">
                        <Button Content="📤 Загрузить файл"
                                Command="{Binding UploadFileCommand}" />
                        <Button Content="📥 Скачать файл"
                                Command="{Binding SaveFilesCommand}" />
                        <Button Content="❌ Удалить файл"
                                Command="{Binding DeleteFilesCommand}" />
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          Background="Transparent"
                          ShowsPreview="True" />

            <!-- Right Panel - File System -->
            <DockPanel Grid.Column="2">
                <!-- Breadcrumb and Search -->
                <Border DockPanel.Dock="Top"
                        Background="{StaticResource PrimaryLightBrush}"
                        Padding="8,6"
                        BorderThickness="0,0,0,1"
                        BorderBrush="{StaticResource BorderLightBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <ItemsControl ItemsSource="{Binding FolderPath}"
                                      Background="Transparent">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:FolderViewModel}">
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="{Binding Name}"
                                                Command="{Binding DataContext.LoadFolderChildsCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource {x:Type Button}}"
                                                BorderThickness="0"
                                                Background="Transparent"
                                                Padding="4,2"
                                                FontSize="13" />
                                        <TextBlock Text="/"
                                                   Margin="0"
                                                   FontSize="18"
                                                   Visibility="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter},
                                                    Path=IsLastItem,
                                                    Converter={StaticResource BoolToVisibilityConverter}}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBox Grid.Column="1"
                                 Width="200"
                                 Height="28"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Введите название файла или папки для поиска" />
                    </Grid>
                </Border>

                <!-- Items List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <ListBox SelectionMode="Extended"
                             BorderThickness="0"
                             Background="Transparent"
                             ItemsSource="{Binding Items}"
                             helpers:ListBoxSelectedItemsBinding.BindableSelectedItems="{Binding SelectedFiles}">
                        <ListBox.ContextMenu>
                            <ContextMenu Style="{StaticResource ContextMenuProxyStyle}">
                                <MenuItem Header="New folder"
                                          Command="{Binding CreateFolderCommand}" />
                            </ContextMenu>
                        </ListBox.ContextMenu>

                        <ListBox.InputBindings>
                            <KeyBinding Key="Delete"
                                        Command="{Binding DeleteFilesCommand}" />
                        </ListBox.InputBindings>

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.Resources>
                            <!-- File DataTemplate -->
                            <DataTemplate DataType="{x:Type vm:FileViewModel}">
                                <view:FileItemView/>
                            </DataTemplate>

                            <!-- Folder DataTemplate -->
                            <DataTemplate DataType="{x:Type vm:FolderViewModel}">
                                <view:FolderItemView/>
                            </DataTemplate>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Style>
                        </ListBox.Resources>
                    </ListBox>
                </ScrollViewer>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>